extends layout-admin

block content
    #container
        table(width="100%")
            tr
                th 主题
                th 录入时间
                th 图片地址
                th 介绍
                th 查看
                th 编辑

            each item in babys
                tr
                    td #{item.title}
                    td #{item.meta.createdAt}
                    td
                        img(src="/#{item.img}")
                    td #{item.summary}
                    td
                        a(href="/detail/#{item._id}") 查看
                    td
                        a(href="###") 修改
                        a(href="###") 删除
